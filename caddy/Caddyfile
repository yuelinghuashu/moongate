moongate.top, www.moongate.top {
    # 所有其他请求代理到 Node.js
    reverse_proxy localhost:3000 {
        # 关键：更完整地传递原始请求信息
        header_up Host {host}
        header_up X-Forwarded-Proto {scheme}
    }

    # 启用 gzip 压缩
    encode gzip zstd

    # 设置安全相关的 HTTP 头
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
    }
}