# caddy/Caddyfile
# 替换 yourdomain.com 为你的真实域名
moongate.top, www.moongate.top {
    # 静态资源（所有都从 public 目录提供）
    @static {
        file /var/www/my-site/public{path}
        file /var/www/my-site/public{path}/index.html
        path_regexp \.(js|css|ico|svg|png|jpg|jpeg|gif|woff|woff2|ttf|eot)$
    }

    handle @static {
        # 设置网站根目录（必须和上面 remote_path 一致）
        root * /var/www/my-site
        # 启用静态文件服务器
        file_server
        header Cache-Control "public, max-age=31536000"
    }
    
    # 所有其他请求代理到 Node.js
    reverse_proxy http://localhost:3000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
    }

    # 启用 gzip 压缩
    encode gzip zstd

    # 设置安全相关的 HTTP 头
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
    }
}

# 可选：HTTP 自动跳转到 HTTPS
# http://moongate.top, http://www.moongate.top {
#    redir https://{host}{uri} permanent
# }